<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuizResult">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_report_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="Quiz Report Card"
                android:textSize="20sp"
                android:textStyle="bold" />

            <!-- Question 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/text_question1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Question 1: What is the capital of France?" />

                <TextView
                    android:id="@+id/text_options1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Options:" />

                <TextView
                    android:id="@+id/text_optionA1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="A) London" />

                <TextView
                    android:id="@+id/text_optionB1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="B) Paris" />

                <TextView
                    android:id="@+id/text_optionC1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="C) Berlin" />

                <TextView
                    android:id="@+id/text_optionD1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="D) Madrid" />

                <TextView
                    android:id="@+id/text_chosen_option1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Chosen Option: B" />

                <TextView
                    android:id="@+id/text_correct_option1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Correct Option: B" />
            </LinearLayout>

            <!-- Repeat the above layout for remaining questions (2 to 10) -->

            <TextView
                android:id="@+id/text_total_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="Total Score: 8 out of 10"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>