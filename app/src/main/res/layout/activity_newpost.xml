<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Newpost">

    <data>
        <variable
            name="newPostData"
            type="com.example.queriverse.Newpost" />
    </data>

    <LinearLayout
        android:id="@+id/linearColumnavatar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:layout_marginTop="24dp"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginHorizontal="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:baselineAligned="false">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.63"
                    android:orientation="horizontal"
                    tools:ignore="UselessParent">

                    <ImageView
                        android:layout_width="38dp"
                        android:layout_height="37dp"
                        android:scaleType="fitXY"
                        android:background="@drawable/sh_image_avatar"
                        android:src="@drawable/ic_logo"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.64"
                        android:ellipsize="end"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:lineSpacingExtra="3dp"
                        android:singleLine="true"
                        android:text="User name"
                        android:textStyle="bold"
                        android:textColor="@color/black_shade"
                        android:textSize="18sp"
                        tools:ignore="HardcodedText,NestedWeights" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="75dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="160dp"
                android:background="@drawable/sh_btn_background_primary">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Post"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    android:paddingStart="12dp"
                    android:paddingEnd="2dp"
                    android:layout_gravity="center_vertical"
                    tools:ignore="HardcodedText" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_tick"
                    android:layout_gravity="center_vertical"
                    android:layout_marginVertical="8dp"
                    android:paddingStart="4dp"
                    android:paddingEnd="8dp"
                    app:tint="@color/white"
                    tools:ignore="ContentDescription" />
            </LinearLayout>

        </androidx.appcompat.widget.Toolbar>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginHorizontal="10dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <EditText
                android:id="@+id/editTextCreatePost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/sh_new_post_edittext"
                android:paddingStart="16dp"
                android:paddingTop="16dp"
                android:paddingEnd="30dp"
                android:paddingBottom="60dp"
                android:hint="Write what you are thinking..."
                android:inputType="text"
                android:textSize="19sp"
                android:textColor="@color/black"
                android:layout_margin="16dp"
                tools:ignore="HardcodedText"
                android:importantForAutofill="no"
                android:ellipsize="end" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="120dp"
                android:paddingVertical="10dp"
                android:background="#EEEEF1"
                android:orientation="vertical">

                <View
                    android:id="@+id/drag_toggle"
                    android:layout_width="40dp"
                    android:layout_height="8dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/sh_drag_toggle_button"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginHorizontal="20dp"
                    android:orientation="horizontal"
                    tools:ignore="UseCompoundDrawables">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:padding="10dp"
                        android:src="@drawable/ic_camera"
                        android:background="@drawable/sh_add_post_options_background"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.71"
                        android:layout_marginTop="7dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginBottom="9dp"
                        android:text="Add Photo"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="@color/black_shade"
                        android:lineSpacingExtra="3dp"
                        android:singleLine="true"
                        tools:ignore="HardcodedText" />

                </LinearLayout>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginHorizontal="20dp"
                        android:orientation="horizontal"
                        tools:ignore="UseCompoundDrawables">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:padding="10dp"
                            android:src="@drawable/ic_video"
                            android:background="@drawable/sh_add_post_options_background"
                            tools:ignore="ContentDescription" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.71"
                            android:layout_marginTop="7dp"
                            android:layout_marginStart="15dp"
                            android:layout_marginBottom="9dp"
                            android:text="Add Video"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:textColor="@color/black_shade"
                            android:lineSpacingExtra="3dp"
                            android:singleLine="true"
                            tools:ignore="HardcodedText" />

                    </LinearLayout>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginHorizontal="20dp"
                        android:orientation="horizontal"
                        tools:ignore="UseCompoundDrawables">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:padding="10dp"
                            android:src="@drawable/ic_add_user"
                            android:background="@drawable/sh_add_post_options_background"
                            tools:ignore="ContentDescription" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.71"
                            android:layout_marginTop="7dp"
                            android:layout_marginStart="15dp"
                            android:layout_marginBottom="9dp"
                            android:text="Tag a Friend"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:textColor="@color/black_shade"
                            android:lineSpacingExtra="3dp"
                            android:singleLine="true"
                            tools:ignore="HardcodedText" />

                    </LinearLayout>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginHorizontal="20dp"
                        android:orientation="horizontal"
                        tools:ignore="UseCompoundDrawables">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:padding="10dp"
                            android:src="@drawable/ic_article"
                            android:background="@drawable/sh_add_post_options_background"
                            tools:ignore="ContentDescription" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.71"
                            android:layout_marginTop="7dp"
                            android:layout_marginStart="15dp"
                            android:layout_marginBottom="9dp"
                            android:text="Write a Article"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:textColor="@color/black_shade"
                            android:lineSpacingExtra="3dp"
                            android:singleLine="true"
                            tools:ignore="HardcodedText" />

                    </LinearLayout>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginHorizontal="20dp"
                        android:orientation="horizontal"
                        tools:ignore="UseCompoundDrawables">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:padding="10dp"
                            android:src="@drawable/ic_dots"
                            android:background="@drawable/sh_add_post_options_background_white"
                            tools:ignore="ContentDescription" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.71"
                            android:layout_marginTop="7dp"
                            android:layout_marginStart="15dp"
                            android:layout_marginBottom="9dp"
                            android:text="More options"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:textColor="@color/black_shade"
                            android:lineSpacingExtra="3dp"
                            android:singleLine="true"
                            tools:ignore="HardcodedText" />

                    </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</layout>