<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#C0C0C0" /> <!-- Grey shadow color -->
            <corners android:radius="15dp" /> <!-- Adjust corner radius as needed -->
        </shape>
    </item>
    <!-- Background -->
    <item android:bottom="2dp" android:right="1dp" android:left="1dp" android:top="1dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/white" /> <!-- Button background color -->
            <corners android:radius="15dp" /> <!-- Adjust corner radius as needed -->
        </shape>
    </item>
</layer-list>
