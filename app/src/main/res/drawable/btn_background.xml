<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#C0C0C0" /> <!-- Grey shadow color -->
            <corners android:radius="15dp" /> <!-- Adjust corner radius as needed -->
        </shape>
    </item>
    <!-- Background -->
    <item android:bottom="3dp" android:right="3dp" android:left="3dp" android:top="3dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/background" /> <!-- Button background color -->
            <corners android:radius="15dp" /> <!-- Adjust corner radius as needed -->
        </shape>
    </item>
</layer-list>
